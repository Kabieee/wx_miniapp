/* pages/video/video.wxss */

.play {
  width: 100%;
  height: 405rpx;
}

video {
  width: 100%;
  height: 100%;
}

.main {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
}

.nav {
  width: 100%;
  height: 8vw;
  display: flex;
  justify-content: space-evenly;
  align-items: center;
  padding: 0.3vw 0 0.5vw 0;
  box-shadow: 0 1px 1vw #e6e6e6;
  border-top: 1px solid #e6e6e6;
}


.nav text {
  text-align: center;
  color: #fc5993;
  font-size: 4.3vw;
  height: 5vw;
  font-weight: 600;
  padding-bottom: 1.5vw;
  border-bottom: 2px solid #fff;
}
/* .nav text:first-child{
    width: 9.5vw;
}
.nav text:last-child{
    width: 18vw;
} */

.active {
  border-bottom: 2px solid #fc5993 !important;
}

swiper {
  width: 100%;
  height: 62.5vh;
}

.about {
  width: 100%;
  font-size: 3.7vw;
  font-weight: 600;
  padding: 1vw 1vw;
  color: #6e6e6e;
  display: flex;
  flex-wrap: wrap;
}

.about text {
  display: block;
  width: 100%;
  box-sizing: border-box;
  padding: 0.5vw 2vw;
}

/* 推荐视频样式 */
.recommend{
  padding: 1.5vw 0 0 3vw;
  color: #585858;
  font-size: 4.5vw;
  font-weight: 600;
  letter-spacing: 1.5px;
}
.revideo {
  width: 100%;
  padding: 1.5vw 0;
  display: flex;
  align-items: center;
  font-weight: 600;
}

.revideo .left {
  display: flex;
  justify-content: center;
  width: 40vw;
  height: 24vw;
  align-items: center;
}

.revideo .left image {
  width: 34vw;
  height: 95%;
  border-radius: 3px;
}

.revideo .right {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  font-size: 4vw;
  width: 56vw;
  height: 24vw;
}
.right .title{
  display: flex;
  align-items: flex-start;
  width: 100%;
  height: 12vw;
  word-break: break-all;
  overflow: hidden;
  text-overflow: ellipsis;
  text-overflow: -o-ellipsis-lastline;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  line-clamp: 2;
  -webkit-box-orient: vertical;
}

.right .time,.right .num{
  display: flex;
  align-items: flex-end;
  height: 6vw;
  font-size: 3vw;
  color: #BDBDBD;
}
.right .time{
  width: 100%;
}
.right .num{
  width: 100%;
}
.right .num text{
  margin-right: 2vw;
}
/* 推荐视频样式 */


/* 评论样式 */
.comment-box{
  width: 100%;
  display: flex;
  justify-content: center;
  flex-wrap: wrap;
}
.comment{
  width: 95%;
  box-sizing: border-box;
  padding: 2vw 0;
  border-bottom: 1px solid #F2F2F2;
}
.comment .user{
  font-weight: 600;
  color: #848484;
  font-size: 4vw;
  display: flex;
  align-items: center;
  padding: 0.5vw 0;
}
.comment .user image{
  width: 6vw;
  height: 6vw;
  border-radius: 50%;
  margin-right: 2vw;
}
.comment .time{
  font-weight: 600;
  color: #BDBDBD;
  font-size: 2.5vw;
  padding: 1vw 0;
}
.comment .cont{
  color: #6E6E6E;
  font-size: 3.7vw;
  word-break: break-all;
}
.write{
  width: 100%;
  position: absolute;
  bottom: 0;
  background: #ffffff;
  height: 5vw;
  display: flex;
  align-items: center;
  /* box-shadow: 0 -1px 1.5vw #F8E0F1; */
  box-shadow: 0 -1px 1.5vw #E6E6E6;
}
.write input{
  border: none;
  width: 100%;
  box-sizing: border-box;
  padding: 0 1vw 0 2.5%;
  color: #000000;
}
.pcc{
  font-size: 4.3vw;
  color: #FD88AE;
  font-weight: 600
}